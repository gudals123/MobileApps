<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UploadExplainActivity">

    <LinearLayout
        android:id="@+id/upload_explain_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_upload_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Insert Explains" />

        <Button
            android:id="@+id/btn_upload_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Done"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/page_explain_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upload_explain_top">

        <ImageView
            android:id="@+id/page_explain_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/user_profile_ex" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edittext_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_selected_image">

            <EditText
                android:id="@+id/edit_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="Explains"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/page_explain_tag_inform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:text="#태그"
        app:layout_constraintTop_toBottomOf="@+id/page_explain_insert" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/insert_tag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/page_explain_tag_inform">

        <EditText
            android:id="@+id/insert_tag_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="태그를 입력하세요."
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>